<html>\n\n<style>\n    #game_sceen {\n      width: 800px;\n      height: 800px;\n      border: 1px solid black;\n    }\n  </style>\n  \n<head>\n  <title>Puzzle Game</title>\n</head>\n\n<body>\n  <h3>Welcome to the Puzzle Game</h3>\n  <div id=\"game_sceen\"></div>\n  \n  <script>\n    let level = 1;\n    let solved = false;\n\n    // Puzzle logic\n    function solvePuzzle(){\n    // your code\n    if ((level === 1)&&(solved === false)) {\n        level = 2;\n        solved = true;\n        console.log('Congratulations! You have solved the Puzzle!');\n    }\n    }\n    \n    // user interface\n    function showLevel(){\n      console.log(`You are at level ${level}`);\n    }\n\n    showLevel();\n    solvePuzzle();\n  </script>\n\n</body>\n\n</html>"